<Page x:Class="Burger_Customiser.Pages.Confirmation.ConfirmationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:confirmation="clr-namespace:Burger_Customiser.Pages.Confirmation"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance confirmation:ConfirmationPageVM, IsDesignTimeCreatable=True}"
      d:DesignHeight="774" d:DesignWidth="650">

    <Grid MouseLeftButtonDown="ConfirmationPage_Click" >
        <Image Source="/Resources/LandingPageBurger.jpg"
               Stretch="UniformToFill"
               Opacity="0.6"/>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Vielen Dank" TextWrapping="Wrap" Style="{StaticResource Header1}"/>
            <TextBlock Text="für Ihre Bestellung!" TextWrapping="Wrap" Style="{StaticResource Header1}"/>
        </StackPanel>
    </Grid>
</Page>

<Page x:Class="Burger_Customiser.Pages.StartSitePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Burger_Customiser.Pages"
      mc:Ignorable="d"
      d:DesignHeight="774" d:DesignWidth="650"
      Title="StartSite">

    <Grid x:Name="IdleScreen">
        <Image Source="/Resources/LandingPageBurger.jpg"
                       Stretch="UniformToFill"
                       Opacity="0.6" MouseLeftButtonDown="IdleScreenLMBDown" />
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Berühren, um zu beginnen..." TextWrapping="Wrap" Style="{StaticResource Header1}" />
            <TextBlock Text="Touch to begin..." TextWrapping="Wrap" Style="{StaticResource Header1}" />
        </StackPanel>
    </Grid>
</Page>